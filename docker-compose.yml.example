version: "3.1"

services:
  idp:
    #container_name: "idp"
    build: ./idp
    volumes:
      - './config/idp/:/external-mount/'
    environment:
      JETTY_BROWSER_SSL_KEYSTORE_PASSWORD: ""
      JETTY_BACKCHANNEL_SSL_KEYSTORE_PASSWORD: back
    restart: always
    depends_on:
      - "ldap"
      - "phpldapadmin"
      - "haproxy"

  ldap:
   build: ./ldap
   #container_name: "ldap"
   environment:
    SLAPD_ORGANIZATION: "Shibboleth United Ltd."
    SLAPD_DOMAIN: "shib"
    SLAPD_PASSWORD: "toor"
    SLAPD_CONFIG_PASSWORD: "config"
   volumes:
    - './config/ldap/static_config/:/etc/ldap'
    - './config/ldap/db/:/var/lib/ldap'
    - './ldap/prepopulate:/etc/ldap.dist/prepopulate'
   #ports:
    #- '389:389'

  phpldapadmin:
    #container_name: "phpldapadmin"
    build: ./phpldapadmin
    ports:
      - '192.168.1.57:88:80'
    environment:
      LDAP_SERVER_HOST: "ldap"
      LDAP_SERVER_PORT: "389"
      UNIQUE_ATTRS: "mail,uid,uidNumbers"
    restart: always
    depends_on:
      - "ldap"
  haproxy:
    restart: always
    #privileged: true
    #container_name: 'haproxy'
    image: haproxy
    #environment:
    #network_mode: "host"
    ports:
     #- '80:80'
     - '192.168.1.57:443:443'
     - '192.168.1.57:8443:8443'
    volumes:
      - './haproxy/:/usr/local/etc/haproxy/'

